<h1>Editing product</h1>
 
<%= form_for :product, url: product_path(@product), method: :patch do |f| %>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :price %><br>
    <%= f.text_area :price %>

  <p>
    <%= f.submit %>
  </p>
     
<% end %>
   
<%= link_to 'Back', products_path %>
